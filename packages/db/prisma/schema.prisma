generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  email     String   @unique
  password  String
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Merchant{
  merchantId        String   @id @default(cuid())
  email             String   @unique
  name              String?
  createdAt         DateTime @default(now())
  auth_type         AuthType
}

enum AuthType {
  Google
  GITHUB
}